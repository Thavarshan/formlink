{
    "$schema": "https://json.schemastore.org/tsconfig",
    "root": true,
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "rootDir": "./",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "vite/client",
            "node"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "./tests/**/*.test.ts",
        "./tests/**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "types/src/**/*.ts",
        "types/src/**/*.d.ts"
    ]
}
